                                <LineBreak/>
                                <Run Text="OUT OF OR IN CONNECTION WITH THE SOFTWARE OR THE USE OR OTHER DEALINGS IN THE"/>
                                <LineBreak/>
                                <Run Text="SOFTWARE."/></TextBlock>
                        </StackPanel>
                    </StackPanel>
                </TabItem>
            </TabControl>
            <Button Content="Close" HorizontalAlignment="Right" Margin="0,45,10,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        </Grid>
    </ScrollViewer>

</Page>
